{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-order",
    "stylelint-csstree-validator"
    
  ],
  "rules": {
    "linebreaks": "unix", 
    "unit-case": "lower",
    "color-hex-case": "lower",
    "function-allowed-list": ["hex", "rgb", "url", "format"],
    "no-eol-whitespace": true,
    "ignoreFiles": ["**/*/*.js", "**static/fonts/*", "**static/css/palette.css", "in.css"],
    "no-empty-first-line": true,
    "color-named": "always-where-possible",
    "color-no-invalid-hex": true,
    "csstree/validator": true,
    "number-leading-zero": "never",
    "block-no-empty": true,
    "no-duplicate-at-import-rules": true,
    "no-extra-semicolons": true,
    "comment-empty-line-before": "always",
    "function-comma-space-after": "always",
    "function-parentheses-space-inside": "never",
    "declaration-colon-space-after": "always",
    "declaration-colon-space-before": "never",
    "block-opening-brace-newline-after": ["always"],
    "block-closing-brace-newline-before": ["always"],
    "value-keyword-case": "lower",
    "comment-whitespace-inside": "always",
    "media-feature-name-allowed-list": "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$",
    "value-list-comma-newline-after": "always-multi-line",
    "value-list-comma-space-after": "always-single-line",
    "value-list-comma-space-before": "never-single-line",
    "function-max-empty-lines": 0,
    "selector-max-empty-lines": 0,
    "value-list-max-empty-lines": 0,
    "selector-class-pattern": "^([a-z][a-z0-9]*)(_[a-z0-9]+)*$",
    "max-empty-lines": 1,
    "unit-allowed-list": ["em", "ch", "%", "px", "rem"],
    "order/properties-order": [
      "width",
      "height"
    ],
    "indentation": [
      4,
      {
	"except": ["block"],
        "message": "Please use 4 spaces for indentation.",
        "severity": "error"
      }
    ]
  }
}

